<phpunit
        bootstrap="./vendor/autoload.php"
        colors="true"
        convertWarningsToExceptions="false"
>
    <testsuites>
        <testsuite name="php sdk Tests">
            <directory>./test</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">src</directory>
        </whitelist>
    </filter>
</phpunit>